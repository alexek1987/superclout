<div class="banner" style=" height: 600px; background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @brand.photo.key, height: 300, width: 400, crop: :fill if @brand.photo.attached? %>')">
  <div class="container">
    <h1> <%= @brand.name %></h1>
    <!-- <p>tagline</p> -->
  </div>
</div>

<div class="container py-5">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-4 mb-3">
      <%= link_to listing_path(listing) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path listing.photo.key, height: 300, width: 400, crop: :fill if listing.photo.attached? %>')">
        <%= listing.product %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mx-auto">
    <h1>Add an influencer offer</h1>
    <%= simple_form_for [@brand, @listing] do |f| %>
    <%= f.input :product, placeholder: "What product are you offering our superclouts?" %>
    <%=  f.input :description, placeholder: "Describe here what you are willing to offer to an influencer in return for their promotion.Describe what you want them to do for example, review the product on their social media, post, about the product, endorse the brand, recommend your brand/product, be seen in public wearing, using or with the product, upload pictures with the product, post about the product, share a post you create for them, make a short video using the product, offer your brand and your offer to other influencers.Remember, the more you ask them to do the more you need to be willing to give/pay themIndicative offer to influencers (what/how are you willing to pay them): " %>
    <%= f.input :photo, as: :file, input_html: { required: true } %>
    <%= f.submit "Create listing", class: "btn btn-ghost" %>
    <% end %>
  </div>

</div>

<%= link_to "Back to all brands", root_path %>
