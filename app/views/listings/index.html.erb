<div class="banner" style="height: 400px;">


</div>


<div class="container">
  <h3>All Listings</h3>
  <%= render "shared/search-bar" %>
  <div class="row listing-brands-container">
    <% @listings.each do |listing| %>
      <div class="col-md-4 mb-3">
        <% if listing.photo.attached? %>
          <div class="card-category" data-listing-id="<%= listing.id %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path listing.photo.key, angle: 0 %>)"><%= listing.product %>
          <div class="card-description">
          <%= form_for [listing, @campaign], remote: true do |f| %>
          <%= f.hidden_field :listing_id, value: listing.id %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.submit "❤️" %>
          
          <% end %>
          
          </div>
          </div>
            <% else %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1568688570940-831467d18af7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80)">
                <%= listing.product %>
                          <div class="card-description">
          <%= form_for [listing, @campaign], remote: true do |f| %>
          <%= f.hidden_field :listing_id, value: listing.id %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.submit "❤️" %>
          
          <% end %>
          
          </div>
              </div>
            <% end %>
          </div>
      <% end %>
      <%= render "shared/brand-cards" %>
      </div>
</div>




