<!-- listings cards -->
<div class="container py-5">
  <h3>Latest Listings</h3>
  <div class="row">
    <% @brands.each do |brand| %>
      <div class="col-md-4 mb-3">
        <% if brand.listings[-1] %>
        <%= link_to listing_path(brand.listings[-1]) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path brand.listings[-1].photo.key %>')">
          <%= brand.listings[-1].product %>
          </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>